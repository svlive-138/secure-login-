<%- include('header') %>


<!-- HTML card -->
<div class="card glass">
  <div class="lock-icon mb-3">ğŸ”’ğŸ“</div>

  <h4 class="mb-3 fw-semibold text-light text-center">
    Hey, feel free to write your secret here<br />
    <small class="text-muted fs-6">It's a fully secured web page ğŸ”</small>
  </h4>

  <% if (typeof alert !== 'undefined' && alert) { %>
    <div class="alert alert-<%= alert.type %> alert-dismissible fade show" role="alert">
      <%= alert.message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <form action="/save-secrets" method="POST">
    <div class="mb-3">
      <textarea
        name="secret"
        id="secretInput"
        rows="4"
        class="form-control border-0 shadow-sm"
        placeholder="Your secret stays safe with us..."
        style="resize: none"
        required
      ></textarea>
    </div>
    <button type="submit" class="btn btn-submit w-100">Submit Secret</button>
  </form>

  <div id="confirmation">
    <span>ğŸ˜Š</span><br />
    Your secret is safely stored!
  </div>

  <button class="btn btn-outline-light mt-4 w-100" onclick="logout()">Logout</button>
</div>

<script>
 function storeSecret() {
  const secret = document.getElementById('secretInput').value.trim();

  const formData = new FormData();
  formData.append("secret", secret); // ğŸ‘ˆ must match backend key

  fetch('/save-secrets', {
    method: 'POST',
    credentials: 'include',
    body: formData
  })
  .then(response => {
    if (response.ok) {
      document.getElementById('secretInput').style.display = 'none';
      document.querySelector('.btn-submit').style.display = 'none';
      document.getElementById('confirmation').style.display = 'block';
      console.log("âœ… Secret stored!");
    } else {
      console.error("âŒ Server rejected the secret");
    }
  })
  .catch(err => console.error("ğŸš¨ Fetch error:", err));
}





    //logout request from server 
    function logout() {
  fetch('/logout', {
    method: 'GET',
    credentials: 'include' // ensures session cookie is included
  })
  .then(response => {
    if (response.redirected) {
      window.location.href = response.url; // follow redirect to homepage
    } else {
      console.error("Logout failed");
    }
  })
  .catch(err => {
    console.error("Error logging out:", err);
  });
}

  
</script>

  
